<% include ./partials/head.ejs %>

<body>
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10" id="content">
            <h1><%= message %></h1>

            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Normal price</th>
                        <th>Best price</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% gamesData.forEach((game, index) => { %>
                    <tr>
                        <th><%= index+1 %></th>
                        <td><%= game.name %></th>
                        <td><%= game.salePrice %>‚Ç¨</th>
                        <td><%= game.cheapestPrice %>‚Ç¨ <%if(game.cheapestPrice < game.salePrice){%>üëç<%}%></th>
                        <td><%= game.releaseDate %></th>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <div class="col-1"></div>
    </div>
</body>